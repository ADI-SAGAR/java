
//program to check whether the given string is palindrome or not

public class StringPalindrome {
    public static void main(String[] args) {
        String s="sagar";
        String rev="";//empty string
        for(int i=s.length()-1;i>=0;i--)//running for till the len of the string
        {
            rev=rev+s.charAt(i);//each character is been added to an empty string

        }
        System.out.println(rev);//gives the o/p of reversed string
        if(s.equals(rev))
            System.out.println("haa");
        else
            System.out.println("no");
    }
}
